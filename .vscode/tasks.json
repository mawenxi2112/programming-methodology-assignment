{
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG",
                "PROJECT_NAME=${fileBasenameNoExtension}",
                "OBJS=${fileBasenameNoExtension}.c"
            ],
            "windows": {
                "command": "C:/msys64/mingw64/bin/mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=${workspaceFolder}/lib/raylib",
                    "PROJECT_NAME=bin/${fileBasenameNoExtension}_win.exe",
                    "OBJS=src/${fileBasenameNoExtension}.c",
                    "BUILD_MODE=DEBUG"
                ]
                },
                "osx": {
                "args": [
                    "RAYLIB_PATH=${workspaceFolder}/lib/raylib",
                    "PROJECT_NAME=bin/${fileBasenameNoExtension}_mac",
                    "OBJS=src/${fileBasenameNoExtension}.c",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}