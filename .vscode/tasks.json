{
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG",
                "PROJECT_NAME=${fileBasenameNoExtension}",
                "OBJS=${fileBasenameNoExtension}.c"
            ],
            "windows": {
                "command": "mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=C:/raylib/raylib",
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "OBJS=src/${fileBasenameNoExtension}.c",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "osx": {
                "args": [
                    "RAYLIB_PATH=/Users/wnxi/repos/raylib",
                    "PROJECT_NAME=bin/${fileBasenameNoExtension}",
                    "OBJS=src/${fileBasenameNoExtension}.c",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}